<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/available_circleImageView"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/lo" />

    <TextView
        android:id="@+id/available_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/available_circleImageView"
        android:layout_toRightOf="@+id/available_circleImageView"
        android:layout_marginTop="5dp"
        android:text="shop name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/available_shop_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/available_shop_name"
        android:layout_alignStart="@+id/available_shop_name"
        android:layout_below="@+id/available_shop_name"
        android:text="Kansanga kampala"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"/>

</RelativeLayout>