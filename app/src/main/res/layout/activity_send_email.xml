<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eliezer.onlineshop.SendEmailActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/include"/>

    <EditText
        android:id="@+id/customer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:hint="Enter your email"
        android:textSize="18dp"
        android:singleLine="true"
        android:background="@drawable/corner_layout_description" />

    <EditText
        android:id="@+id/email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:hint="Enter email Subject"
        android:singleLine="true"
        android:background="@drawable/corner_layout_description" />

    <EditText
        android:id="@+id/email_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/email_subject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:ems="10"
        android:gravity="left|top"
        android:hint="Enter email Subject"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        android:background="@drawable/corner_layout_description" />

    <Button
        android:id="@+id/send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/email_content"
        android:layout_alignRight="@+id/email_content"
        android:layout_below="@+id/email_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="28dp"
        android:text="Send"
        android:padding="20dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorMaroon"/>



</RelativeLayout>
