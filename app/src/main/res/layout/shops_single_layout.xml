<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/shop_cardview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="6dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lo"
                android:clickable="true"/>

            <TextView
                android:id="@+id/shop_name_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:text="HNK Design"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlack"

                android:drawableLeft="@drawable/ic_label_black_24dp"
                android:drawablePadding="5dp"
                android:inputType="textCapWords"
                android:capitalize="sentences"
                />

            <TextView
                android:id="@+id/shop_city_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_name_address"
                android:text="Bukavu"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/shop_physical_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_city_address"
                android:text="Kansanga Kampala"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="5dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>